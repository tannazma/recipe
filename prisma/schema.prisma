// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id      Int               @id @default(autoincrement())
  name    String
  img_url String
  recipes Recipe[]
}

model Recipe {
  id           Int               @id @default(autoincrement())
  name         String
  categories   Category[]
  img_url      String
  instructions String
  ingredients  String
  prep_time    Int
  serves       Int
  user         User              @relation(fields: [userId], references: [id])
  userId       Int
  Comment      Comment[]
}

model User {
  id       Int      @id @default(autoincrement())
  username String
  password String
  Recipe   Recipe[]
}

model Comment {
  id         Int      @id @default(autoincrement())
  name       String
  message    String
  rating     Int
  recipe     Recipe   @relation(fields: [recipeId], references: [id])
  recipeId   Int
  created_at DateTime
}
